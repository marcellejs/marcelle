{
  "name": "@marcellejs/backend",
  "description": "A real-time server for Marcelle applications",
  "version": "0.6.5",
  "homepage": "",
  "keywords": [
    "feathers",
    "marcelle"
  ],
  "author": {
    "name": "Jules FrancÌ§oise",
    "email": "me@julesfrancoise.com"
  },
  "contributors": [],
  "bugs": {},
  "engines": {
    "node": ">= 18.16.0"
  },
  "feathers": {
    "language": "ts",
    "packager": "pnpm",
    "database": "mongodb",
    "framework": "koa",
    "transports": [
      "rest",
      "websockets"
    ],
    "schema": false
  },
  "bin": {
    "marcelle-backend": "./bin/backend.cjs"
  },
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "main": "lib/index",
  "scripts": {
    "dev": "nodemon -x ts-node src/index.ts",
    "build": "shx rm -rf lib/ && tsc",
    "start": "node lib/",
    "prettier": "npx prettier \"**/*.ts\" --write",
    "mocha": "cross-env NODE_ENV=test mocha test/ --require ts-node/register --recursive --extension .ts --exit",
    "test": "npm run mocha",
    "bundle:client": "npm run build && npm pack --pack-destination ./public"
  },
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "@feathersjs/authentication": "^5.0.37",
    "@feathersjs/authentication-client": "^5.0.37",
    "@feathersjs/authentication-local": "^5.0.37",
    "@feathersjs/configuration": "^5.0.37",
    "@feathersjs/errors": "^5.0.37",
    "@feathersjs/feathers": "^5.0.37",
    "@feathersjs/koa": "^5.0.37",
    "@feathersjs/mongodb": "^5.0.37",
    "@feathersjs/schema": "^5.0.37",
    "@feathersjs/socketio": "^5.0.37",
    "@feathersjs/transport-commons": "^5.0.37",
    "feathers-casl": "^2.2.2",
    "feathers-hooks-common": "^8.2.1",
    "mongodb": "^6.18.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@feathersjs/cli": "5.0.37",
    "@feathersjs/rest-client": "^5.0.37",
    "@feathersjs/typebox": "^5.0.37",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.1",
    "axios": "^1.13.2",
    "cross-env": "^10.1.0",
    "mocha": "^11.7.5",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}