{
  "name": "marcelle",
  "private": "true",
  "version": "0.0.1",
  "description": "Monorepo for all Marcelle things (or at least some)",
  "author": "Jules Fran√ßoise <me@julesfrancoise.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm --recursive --filter @marcellejs/* --filter create-marcelle run build",
    "bundle": "pnpm build && pnpm --recursive --filter @marcellejs/* run bundle",
    "clean": "pnpm --recursive run clean"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.13.1",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rimraf": "^6.1.2",
    "svelte": "^5.45.10",
    "svelte-eslint-parser": "^1.4.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@10.23.0",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react-is"
      ]
    },
    "ignoredBuiltDependencies": [
      "esbuild",
      "protobufjs",
      "svelte-preprocess"
    ]
  }
}
