{
  "name": "marcelle",
  "private": "true",
  "version": "0.0.1",
  "description": "Monorepo for all Marcelle things (or at least some)",
  "author": "Jules Fran√ßoise <me@julesfrancoise.com>",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm --recursive --filter @marcellejs/* --filter create-marcelle run build",
    "bundle": "pnpm build && pnpm --recursive --filter @marcellejs/* run bundle",
    "clean": "pnpm --recursive run clean"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-svelte": "^2.44.1",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.7",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "rimraf": "^5.0.10",
    "svelte": "^4.2.19",
    "svelte-eslint-parser": "^0.41.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.12.1",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react-is"
      ]
    }
  }
}
