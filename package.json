{
  "name": "marcelle",
  "private": "true",
  "version": "0.0.1",
  "description": "Monorepo for all Marcelle things (or at least some)",
  "author": "Jules Fran√ßoise <me@julesfrancoise.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm --recursive --filter @marcellejs/* --filter create-marcelle run build",
    "bundle": "pnpm build && pnpm --recursive --filter @marcellejs/* run bundle",
    "clean": "pnpm --recursive run clean"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.11.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "svelte": "^5.38.2",
    "svelte-eslint-parser": "^1.3.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@10.12.1",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react-is"
      ]
    }
  }
}
