{
  "name": "marcelle",
  "private": "true",
  "version": "0.0.1",
  "description": "Monorepo for all Marcelle things (or at least some)",
  "author": "Jules Fran√ßoise <me@julesfrancoise.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm --recursive --filter @marcellejs/* --filter create-marcelle run build",
    "bundle": "pnpm build && pnpm --recursive --filter @marcellejs/* run bundle",
    "clean": "pnpm --recursive run clean"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-svelte": "^3.1.0",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^6.0.1",
    "svelte": "^5.23.0",
    "svelte-eslint-parser": "^1.0.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.12.1",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react-is"
      ]
    }
  }
}
