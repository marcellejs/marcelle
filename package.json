{
  "name": "marcelle",
  "private": "true",
  "version": "0.0.1",
  "description": "Monorepo for all Marcelle things (or at least some)",
  "author": "Jules Fran√ßoise <me@julesfrancoise.com>",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm --recursive --filter @marcellejs/* --filter create-marcelle run build",
    "bundle": "pnpm build && pnpm --recursive --filter @marcellejs/* run bundle",
    "clean": "pnpm --recursive run clean"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.7",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "rimraf": "^5.0.10",
    "svelte": "^5.1.13",
    "svelte-eslint-parser": "^0.43.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.12.1",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react-is"
      ]
    }
  }
}
